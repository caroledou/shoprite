<div class="planning">
  <% @order.recipes.each do |key, value| %>
    <div class="row-planning">
      <h2><%= key.capitalize %> : </h2>
      <ul class="list-unstyled">
        <li><%= display_recipe_name(value) %></li>
      </ul>
    </div>
  <% end %>
  <div id="total-planning">
    <p>Total for the week: <%= render "payments/total" %></p>
  </div>
</div>


