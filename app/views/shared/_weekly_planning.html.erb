<div class="planning">
  <% @order.recipes.each do |key, value| %>
    <div class="row-planning">
      <h2><%= key.capitalize %> : </h2>
      <ul class="list-unstyled" id="content-row">
        <div>
        <li class="<%= value == "" ? "placeholder-light" : "placeholder-bold" %>"><%= value == "" ? "What's on the menu today?" : display_recipe_name(value) %></li>
        </div>
        <div>
          <p>CHF <%= display_price_recipe(value) %></p>
        </div>
      </ul>
    </div>
  <% end %>
  <div id="total-planning">
    <p>Total: <%= render "payments/total" %></p>
  </div>
</div>


