<%= form_tag recipes_path, method: :get do %>
  <div class="row">
    <div class="col-xs-4">
      <%= text_field_tag :category,
        params[:category],
        class: "form-control",
        placeholder: "Recipe category"
      %>
    </div>
  </div>
  <%= submit_tag "Find recipes", class: 'link-to-button' %>
<% end %>
