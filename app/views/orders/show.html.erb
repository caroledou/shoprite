<div class="container">
  <div class="col-xs-8 col-xs-offset-2">
    <h1>Your Cart</h1>
  </div>
  <div class="row">
    <% @order.recipes.each do |key, value| %>
    <div class="recipe-cart <%= key %> col-xs-8 col-xs-offset-2">
      <h2><%= key.capitalize %> : <%= display_recipe_name(value) %></h2>
      <i class="fas fa-chevron-down"></i>
    </div>
    <div class="ingredient-cart <%= key %> col-xs-8 col-xs-offset-2">
      <% @order.order_details.where(day: key).each do |detail| %>
       <ul class="list-unstyled">
         <li><%= detail.composant.quantity %>gr <%= detail.composant.ingredient %> <%= detail.composant.price_cents %>chf</li>
       </ul>
      <% end %>
    </div>
    <% end %>
    <div class="col-xs-6 col-xs-offset-3" id="payment">
      <%= render "payments/total" %>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <%= link_to new_order_payment_path(@order.id) do  %>
        <p class="link-to-button" id="yummy">Proceed to Payment</p>
      <% end %>
    </div>
  </div>
</div>

