<div class="container">
  <h1>Recipes</h1>
  <div class ="row">
    <div class="col-xs-12">
      <%= render 'shared/search' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @recipe.photo, width: 800, crop: :fill %>');">
              <div class="card-name">
                <h2> <%= @recipe.name %></h2>
              </div>
              <div class="card-favorite">
                <i class="far fa-heart"></i>
              </div>
              <div class="card-price">
               <h3>CHF 56</h3>
              </div>
              <div class="card-time">
                <i class="fas fa-stopwatch">  <%= @recipe.cooking_time %>'</i>
              </div>
              <%= link_to recipe_path(@recipe.id) do %>
                <div class="card-info">
                  <i class="fas fa-info"></i>
                </div>
              <% end %>
            </div>
          </div>
          <div class="flip-card-back">
            <div class="card" id="show-recipe">
              <div class="card-name" id="show-name">
                <h2> <%= @recipe.name %></h2>
                <h3>Ingrédients</h3>
                <% @recipe.composants.each do |composant|%>
                <ul class="list-styled">
                  <li><%= composant.quantity %><%= composant.ingredient.name.capitalize  %></li>
                </ul>
                <% end %>
              </div>
              <div id="show-photo">
                <%= cl_image_tag( @recipe.photo,width: 300, height: 200, crop: :fill) %>
              </div>
              <div id="show-review">
                <h3>Reviews</h3>
                <p>Excellent !! J’ai juste pas mis le jus de citron, il en ai plus meilleur, je referai ce poulet !</p>
              </div>
              <div class="card" id="show-back">
                <%= link_to 'javascript:history.go(-1);' do %>
                  <i class="fas fa-chevron-circle-left"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-2 col-xs-offset-4">
      <%=link_to recipes_path(category: @category, recipe_ids: array_of_burned_ids(params[:recipe_ids])) do %>
        <p class="link-to-button">Yikes
      </div>
    <% end %>
    <div class="col-xs-2 col-offset-4">
      <p class="link-to-button" id="yummy">Yummy</p>
    </div>
  </div>
</div>
