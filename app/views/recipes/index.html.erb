<div class="container">
  <div class="grid">
    <div class="week-element">
      <%= render 'shared/weekly_planning' %>
    </div>
    <div class="search-element">
      <%= render 'shared/search' %>
    </div>
    <div class="recipe-element">
      <div class="flip-card">
        <div class="flip-card-inner">
          <div class="flip-card-front">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @recipe.photo, crop: :fill %>');">
              <div class="card-name">
                <h2> <%= @recipe.name %></h2>
              </div>
              <div class="card-favorite">
                <i class="far fa-heart"></i>
              </div>
              <div class="card-price">
               <h3>CHF 56</h3>
              </div>
              <div class="card-time">
                <i class="fas fa-stopwatch">  <%= @recipe.cooking_time %>'</i>
              </div>
              <div class="card-info">
                <i class="fas fa-info"></i>
              </div>
            </div>
          </div>
          <div class="flip-card-back">
            <div class="card" id="show-recipe">
              <div class="card-name" id="show-name">
                <h2> <%= @recipe.name %></h2>
                <h3>Ingrédients</h3>
                <% @recipe.composants.limit(5).each do |composant|%>
                <ul class="list-styled">
                  <li><%= composant.quantity %>gr <%= composant.ingredient.capitalize  %></li>
                </ul>
                <% end %>
              </div>
              <div id="show-photo">
                <%= cl_image_tag( @recipe.photo,width: 300, height: 200, crop: :fill) %>
              </div>
              <div id="show-review">
                <h3>Reviews</h3>
                <p>Excellent !! J’ai juste pas mis le jus de citron, il en ai plus meilleur, je referai ce poulet !</p>
              </div>
              <div class="card-info" id="show-back">
                <i class="fas fa-chevron-circle-left"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="button-element">
      <div>
        <%=link_to recipes_path(category: @category, recipe_ids: array_of_burned_ids(params[:recipe_ids])) do %>
          <p class="link-to-button">Yikes</p>
        <% end %>
      </div>
      <div>
        <%= link_to orders_path(recipe_id: @recipe.id), method: 'post' do  %>
          <p class="link-to-button" id="yummy">Yummy</p>
        <% end %>
      </div>
    </div>
  </div>
</div>



